{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 8                        //允许使用async await  es7/es8语法
    },
    "rules": {
        // "indent": [
        //     "error",
        //     "tab"
        // ],
        "no-console": "off",
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "arrow-parens": 0,
        "generator-star-spacing": 0,
        // 0:允许;1:警告;2:错误
        "no-cond-assign": 1,                                            //禁止在条件表达式中使用赋值语句
        "no-useless-escape":1,                                          //不允许在字符串和正则表达式中使用无意义的换行符
        "no-unused-vars": [0, {"vars": "all", "args": "after-used"}],   //不能有声明后未被使用的变量或参数
        "no-constant-condition":1,                                      //禁止在条件中使用常量表达式 if(true) if(1)
        "no-dupe-keys": 2,                                              //在创建对象字面量时不允许键重复 {a:1,a:1}
        "no-empty": 1,                                                  //块语句中的内容不能为空
        "no-extra-semi": 2,                                             //禁止多余的冒号
        "camelcase": 1,                                                 //强制驼峰法命名
        "func-names": 0,                                                //函数表达式必须有名字
        "strict": 2,                                                      //使用严格模式
        "linebreak-style": 0
    }
}